/* battle.wxss */
.container {
    display: flex;
    justify-content: space-between; /* 在横屏模式下，将内容放置在左右两侧 */
    height: 80vh;
}

.container1 {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.player {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 50%; 
}

/* 根据实际需求设置投掷区（.dice-zone）和锁定区（.lock-zone）的样式 */
.title {
    height: 10vh;
    width: 100%;
    background-color: #22223b;
    color: #ffffff;
    font-size: 6vh;
    font-weight: bold;
    display: flex;
    justify-content: center;
    align-items: flex-end;
}

.message {
    display: flex;
    justify-content:space-between;
    align-items: flex-end;
    width: 70%;
    margin-top: 2vh;
}

.title1 {
    font-size: 6vh;
    font-weight: bold;
    color: #000000;
    display: flex;
    justify-content:left;
    align-items: center;
}

.title2 {
    font-size: 6vh;
    font-weight: bold;
    color: #880000;
    display: flex;
    justify-content:left;
    align-items: center;
}

.chips {
    font-size: 3vh;
    font-weight: bold;
    display: flex;
    justify-content: right;
    align-items: center;
}

.title3 {
    height: 5vh;
    width: 90%;

    font-size: 3.5vh;
    font-weight: bold;
    border-bottom-left-radius: 10px;
    border-bottom-right-radius: 10px;

    display: flex;
    justify-content: center;

    color: #ffffff;
    background-color: #4a4e69;
}

.touzi {
    height: 13vh;
    width: 13vh;
}  

.dice-zone {
    border-radius: 5px;
    align-items: left;
    height: 23vh;
    width: 80%;
    border: 2px double black;
    margin-top: 0.5vh;
    margin-bottom: 1vh;
    background-color: #f5ebe0;
}

.lock-zone {
    border-radius: 5px;
    align-items: left;
    height: 23vh;
    width: 80%;
    border: 2px solid black;
    margin-top:0.5vh;
    margin-bottom: 1vh;
    background-color: #e3d5ca
}

button {
    background-color: #415a77;
    color: #e0e1dd;
    padding: 10px 20px;
    border-radius: 5px;
    font-size: 18px;
}

/* 自定义选择器的样式 */
picker {
    background-color: #fff; /* 背景颜色 */
    border: 2px solid #ccc; /* 边框样式 */
    border-radius: 5px; /* 边框圆角 */
    padding: 5px; /* 内边距 */
}

/* 自定义选择器的选项样式 */
picker-view {
    height: 50px; /* 选择器列表的高度 */
}

/* 自定义选择器的选项文字样式 */
picker-view-column {
    text-align: center; /* 文字居中对齐 */
    font-size: 16px; /* 文字大小 */
    color: #333; /* 文字颜色 */
}

/* 自定义选择器的选中项样式 */
picker-view-column::after {
    background-color: #007bff; /* 选中项背景颜色 */
    height: 1px; /* 选中项下划线高度 */
}

.backbutton {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    position: fixed;
    bottom: 5vh;
    right: 3vh;
}

.button {
    font-size: 10px;
}

.logo {
    height: 50px;
    width: 50px;
}

.bar {
    height: 5vh;
    width: 100%;
    position: fixed;
    bottom: 0;
    background-color: #22223b;
}

/* game.wxss */
.multiplier {
    display: flex;
    align-items: center;
    margin-bottom: 10px;
}

radio {
    color: #22223b;
}

.label {
    font-weight: bold;
    margin-right: 10px;
}


.sure {
    background-color: #22223b;
    color: #ffffff;
    padding: 10px 20px;
    border-radius: 5px;
    font-size: 18px;
    position: fixed;
    bottom: 10vh;
    left: 85vh;
}