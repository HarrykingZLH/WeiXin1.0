/* game_modes.wxss */
.container {
    height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

view {
    color: #22223b;
    font-weight: bold;
}

.title {
    font-weight: bold;
    font-size: 12vh;
    margin-top: 10vh;
}

.modes {
    margin: 1vh;
}

.mode-option {
    display: flex;
    align-items: center;
    margin: 5vh;
}

.mode-icon {
    width: 16vh;
    height: 16vh;
    margin-right: 3vh;
}

.mode-label {
    font-size: 4.5vh;
}

.back-button {
    align-self: flex-end; /* 按钮位于右下角 */
}

.back-icon {
    width: 10vh;
    height: 10vh;
    margin-right: 3vh;
}
  