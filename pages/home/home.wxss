/* game.wxss */

.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100vh;
    background-color: #f0f0f0;
  }
  
  .title {
    font-size: 24px;
    margin-bottom: 10px;
    color: #333;
  }
  
  button {
    background-color: #444444;
    color: #fff;
    padding: 10px 20px;
    border: none;
    border-radius: 5px;
    font-size: 16px;
    cursor: pointer;
    margin: 2px;
  }
  

  /* 在app.wxss中定义样式 */
.modal-dialog {
    width: 80%; /* 设置对话框的宽度 */
    max-width: 400px; /* 设置对话框的最大宽度 */
    margin: 0 auto; /* 水平居中 */
    background-color: #fff;
    border-radius: 10px;
    padding: 20px;
    text-align: center;
  }
  