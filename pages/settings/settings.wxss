/* 游戏设置容器 */
.settings-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100vh;
}

/* 设置界面标题样式 */
.title {
    font-size: 9vh;
    font-weight: bold;
    margin-bottom: 3vh;
}



/* 表单项样式 */
.form-item {
    display: flex;
    flex-direction: row;
    align-items: center;
    margin-bottom: 3vh;
}

/* 输入框样式 */
input {
    flex: 1vh;
    padding: 2vh;
    border: 1px solid #778da9;
    border-radius: 5px;
    font-size: 16px;
}

/* 按钮容器样式 */
.button-container {
    display: flex;
    justify-content: center;
    margin-top: 20px;
}

/* 确定按钮样式 */
.btn-confirm {
    background-color: #415a77;
    color: #e0e1dd;
    padding: 10px 20px;
    border-radius: 5px;
    font-size: 18px;
}

/* 主页按钮样式 */
.btn-home {
    background-color: #0d1b2a;
    color: #e0e1dd;
    padding: 10px 20px;
    border-radius: 5px;
    font-size: 18px;
    
}
